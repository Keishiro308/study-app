<% @schedules.each do |schedule| %>
  <% unless schedule.completed == true %>
    <div id=<%="modal-group-#{schedule.id}"%> uk-modal>
      <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
          <h2 class="uk-modal-title">振り返り</h2>
        </div>
        <%= form_with model: schedule ,url: completed_schedule_path(schedule), method: :patch do |f| %>
          <div class="uk-modal-body">
            <div class="field">
              <%= f.label :actual_time, "実際かかった時間(0.1分刻み)" %>
              <%= f.number_field :actual_time, step: '0.1', class: 'uk-input uk-form-width-small', id: "actual_time_#{schedule.id}" %>分
            </div>
            <div class="field">
              <%= f.label :review, "振り返り" %>
              <%= f.text_area :review, class: 'uk-textarea', id: "review_#{schedule.id}" %>
            </div>
          </div>
          <div class="uk-modal-footer uk-text-right">
            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
            <%= f.submit '完了', class: 'uk-button uk-button-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
<% end %>