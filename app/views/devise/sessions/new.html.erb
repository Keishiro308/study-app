<div class="uk-container">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email,'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'uk-input' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'uk-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: 'uk-checkbox' %>
        <%= f.label :remember_me, 'ログインを記憶する' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'uk-button uk-button-primary uk-margin-top' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


